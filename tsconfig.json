{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./src/",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": false,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "lib": ["es2015"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}