{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    },
    "lib": ["es2015"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}